pipeline {
    agent any
    environment {
        PROJECT_DIR = 'src/Entregable_3'
        PYTHON_VERSION = 'python3'
        VENV_DIR = 'venv'
        DOCS_DIR = "${PROJECT_DIR}/docs"
    }
    stages {
        stage('Setup') {
            steps {
                echo "Instalando dependencias..."
                sh """
                #!/bin/bash
                cd ${PROJECT_DIR}
                ${PYTHON_VERSION} -m venv ${VENV_DIR}
                . ${VENV_DIR}/bin/activate
                pip install --upgrade pip
                pip install -r requirements.txt
                """
            }
        }
       stage('Generate PyDocs') {
    steps {
        echo "Generando documentación PyDoc..."
        sh """
        # Crear el directorio para los documentos
        mkdir -p src/Entregable_3/docs
        # Activar el entorno virtual desde el directorio correcto
        cd src/Entregable_3
        . venv/bin/activate
        for file in \$(find . -name "*.py" ! -name "__init__.py"); do
            pydoc -w \$file
            mv \$(basename "\$file").html ${DOCS_DIR}
        done
        """
    }
}

        stage('Publish PyDocs') {
            steps {
                echo "Publicando PyDocs en Jenkins..."
                publishHTML(target: [
                    reportDir: "${DOCS_DIR}",
                    reportFiles: 'index.html',
                    reportName: 'Documentación PyDocs'
                ])
            }
        }
        stage('Deliver') {
            steps {
                echo "Simulando entrega..."
                sh "echo 'Entrega completada exitosamente.'"
            }
        }
    }
    post {
        always {
            echo "Pipeline finalizado."
        }
        failure {
            echo "Pipeline falló. Verifica los errores."
        }
        success {
            echo "Pipeline ejecutado exitosamente."
        }
    }
}
