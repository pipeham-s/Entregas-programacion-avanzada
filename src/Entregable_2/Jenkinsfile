pipeline {
    agent{
        node {
            label 'docker-agent-python'
        }
    }
    environment {
        PROJECT_DIR = 'src/Entregable_2/Code'
    }
    stages {
        stage('Build') {
            steps {
                echo "Compilando el proyecto..."
                sh """
                cd ${PROJECT_DIR}
                javac -d out \$(find . -name "*.java")
                """
            }
        }
        stage('Javadoc') {
            steps {
                echo "Generando Javadoc..."
                sh """
                javadoc -d src/Entregable_2/docs -sourcepath src -subpackages Entregable_2.Code
                """
            }
        }
    }
    post {
        always {
            echo "Pipeline finalizado."
            cleanWs()
        }
        failure {
            echo "Pipeline fall√≥. Verifica los errores."
        }
        success {
            echo "Pipeline ejecutado exitosamente."
        }
    }
}
