pipeline {
    agent any
    environment {
        PROJECT_DIR = 'src/Entregable_1'
        PYTHON_VERSION = 'python'
        VENV_DIR = 'venv'
    }
    stages {
        stage('Setup') {
            steps {
                echo "Instalando dependencias..."
                bat """
                cd ${PROJECT_DIR}
                ${PYTHON_VERSION} -m venv ${VENV_DIR}
                call ${VENV_DIR}\\Scripts\\activate
                pip install --upgrade pip
                pip install -r requirements.txt
                """
            }
        }
        stage('Test') {
            steps {
                echo "Ejecutando tests..."
                bat """
                cd ${PROJECT_DIR}
                call ${VENV_DIR}\\Scripts\\activate
                ${PYTHON_VERSION} -m pytest --cov=trivia --cov-report=term --cov-report=html
                """
            }
        }
        stage('Report') {
            steps {
                echo "Generando reporte de cobertura..."
                publishHTML(target: [
                    reportDir: "${PROJECT_DIR}\\htmlcov",
                    reportFiles: 'index.html',
                    reportName: 'Cobertura de Tests'
                ])
            }
        }
        stage('Deliver') {
            steps {
                echo "Simulando entrega..."
                bat "echo 'Entrega completada exitosamente.'"
            }
        }
    }
    post {
        always {
            echo "Pipeline finalizado."
            deleteDir()  // Limpia el workspace
        }
        failure {
            echo "Pipeline fall√≥. Verifica los errores."
        }
        success {
            echo "Pipeline ejecutado exitosamente."
        }
    }
}
