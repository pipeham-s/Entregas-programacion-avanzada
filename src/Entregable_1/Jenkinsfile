pipeline {
    agent any
    triggers {
        pollSCM('H/5 * * * *')  // Verifica cambios cada 5 minutos
    }

    environment {
        PROJECT_DIR = 'src/Entregable_1'
        PYTHON_VERSION = '/usr/bin/python3'  // Ajusta la ruta si es necesario
        VENV_DIR = 'venv'  // Directorio del entorno virtual
    }

    stages {
        stage('Setup Python') {
            steps {
                echo "Instalando Python y creando entorno virtual..."
                sh """
                sudo apt update -y
                sudo apt install -y python3 python3-venv python3-pip
                cd ${PROJECT_DIR}
                ${PYTHON_VERSION} -m venv ${VENV_DIR}
                . ${VENV_DIR}/bin/activate
                pip install --upgrade pip
                """
            }
        }
        stage('Build') {
            steps {
                echo "Instalando dependencias..."
                sh """
                cd ${PROJECT_DIR}
                . ${VENV_DIR}/bin/activate
                pip install -r requirements.txt
                """
            }
        }
        stage('Test') {
            steps {
                echo "Ejecutando tests..."
                sh """
                cd ${PROJECT_DIR}
                . ${VENV_DIR}/bin/activate
                pytest --cov=trivia --cov-report=term --cov-report=html
                """
            }
        }
        stage('Report') {
            steps {
                echo "Generando reporte de cobertura..."
                publishHTML(target: [
                    reportDir: "${PROJECT_DIR}/htmlcov",
                    reportFiles: 'index.html',
                    reportName: 'Cobertura de Tests'
                ])
            }
        }
        stage('Deliver') {
            steps {
                echo "Simulando entrega..."
                sh """
                echo "Entrega completada exitosamente."
                """
            }
        }
    }

    post {
        always {
            echo "Pipeline finalizado."
            cleanWs()  // Limpia el workspace después de la ejecución
        }
        failure {
            echo "Pipeline falló. Verifica los errores."
        }
        success {
            echo "Pipeline ejecutado exitosamente."
        }
    }
}
